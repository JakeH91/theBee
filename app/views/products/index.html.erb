<h1>Products</h1>
<% if !params[:q] %>
	<% cache(cache_key_for_products) do %>
		<%= render @products %>
	<% end %>
<% else %>
	<% Rails.cache.clear %>
	<%= render @products %>
<% end %>

<%= will_paginate @products %>
<br>

<% if can? :create, @product %>
	<%= link_to 'New Product', new_product_path %>
<% end %>